{% extends 'skeleton.html.twig' %}

{% block container %}

    <div class="columns is-gapless">
        <div class="column is-12 is-gapless">
            <div class="field is-pulled-right has-addons">
                &nbsp;
                <div class="control">
                    <input class="input" type="text" v-model="search" placeholder="Zoeken">
                </div>
            </div>
            <button class="button is-pulled-right"><i class="fa-solid fa-hand-sparkles"></i>&nbsp;Nieuwe aanmaken
            </button>
        </div>
    </div>

    <div class="columns is-gapless" v-for="skillGroup in skillGroups">
        <div class="column is-12">
            <h1 class="title is-1">{{ '{{ skillGroup.name }}' }}</h1>
            <table class="table is-bordered is-striped is-narrow is-hoverable is-overview-table">
                <tr>
                    <th>Naam</th>
                    <th>Geloof / Element</th>
                </tr>
                <tr v-for="skill in filteredSkills(skillGroup.name)" :key="skill.id">
                    <td class="is-clickable" @click="navigateToSkill(skill.id)">
                        <a href="#">{{ '{{ skill.name }}' }}</a>
                    </td>
                    <td>
                        {{ '{{ skill.deityName }}' }}
                        {{ '{{ skill.elementName }}' }}
                    </td>
                </tr>
            </table>
        </div>
    </div>

    <script>
        Vue.createApp({
            data() {
                return {
                    search: '',
                    skills: {{ skills|json_encode|raw }},
                    skillGroups: []
                }

            },
            computed: {},
            methods: {
                filteredSkills(skillGroup) {
                    return this.skills.filter(
                        (skill) => skill.typeName === skillGroup
                    );
                }
            }, mounted() {
                const skillGroups = [];

                for (const skill of this.skills) {
                    if (skillGroups.indexOf(skill.typeName) === -1) {
                        skillGroups.push(skill.typeName);
                    }
                }
                this.skillGroups = skillGroups.map((skillGroup) => {
                    return { name: skillGroup }
                });
            }
        }).mount('.content');
    </script>

{% endblock %}
